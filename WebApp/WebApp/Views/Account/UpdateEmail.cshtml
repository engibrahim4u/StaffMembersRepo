@model EmailVM

@{
    ViewData["Title"] = localizer["Change Email"];

}


<h4 class="alert alert-danger text-center">@localizer["After changing your email the system will sign out"]</h4>

<h4>@localizer["Change Email"]</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="UpdateEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="@localizer["Change"]" class="btn btn-primary" />
                <a asp-action="UserProfile" class="btn btn-primary">@localizer["Cancel"]</a>

            </div>
        </form>
    </div>
    <div class="col-md-4"></div>

</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


