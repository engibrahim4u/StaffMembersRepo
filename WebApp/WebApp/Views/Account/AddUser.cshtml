@model UserVM

@{

    ViewData["Title"] = localizer["Register New User"] ;
}

<h3 class="text-primary text-center" > @localizer["Register New User"]</h3>

    @if(ViewBag.Created != null)
    {

        <h4 class="text-success text-center">@localizer["Account Successfuly Registerd"]</h4>
    }

        <div class="row">
            <form asp-action="AddUser">

                <div class="row">
                    <div class="col-md-3"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger col-md-6"></div>
                    <div class="col-md-3"></div>

                </div>


                <div id="registerForm" class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="@localizer["Name"]" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="@localizer["Email"]" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mobile" class="control-label"></label>
                                    <input asp-for="Mobile" class="form-control" placeholder="@localizer["Mobile"]" />
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="@localizer["Password"]" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@localizer["Confirm Password"]" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SelectedRole" class="control-label"></label>

                                    <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.Roles, "ID", "Name"))">
                                        <option selected="selected" value=""> @localizer["Choose"] </option>
                                    </select>
                                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="@localizer["Register"]" class="btn btn-danger" />
                                    <a asp-action="UserManage" asp-controller="Administration" class="btn btn-success">رجوع</a>

                                </div>

                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </form>

        </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
