@model ContactUsActionVM

@{
    ViewData["Title"] = "الرد على رسالة";
}


<h2 class="font-kawla main-widget">الرد على رسالة</h2>

<hr />
<div class="container">

    @if (ViewBag.Success != null && ViewBag.Success == true)
    {
        <h5 class="text-success text-center">تم ارسال الرد للايميل</h5>

    }
    else if (ViewBag.fail != null && ViewBag.fail == true)
    {
        <h5 class="text-success text-center">حدث خطا حاول مرة اخرى</h5>

    }
    else
    {
        <div class="row">
            <table class="table table-responsive">
                <tr>
                    <th>الاسم</th>
                    <td>@Model.ContactMessageInfo.SenderName</td>
                </tr>
                <tr>
                    <th>الايميل</th>
                    <td>@Model.ContactMessageInfo.Email</td>
                </tr>
                <tr>
                    <th>الجوال</th>
                    <td>@Model.ContactMessageInfo.Mobile</td>
                </tr>
                <tr>
                    <th>عنوان الرسالة</th>
                    <td>@Model.ContactMessageInfo.Title</td>
                </tr>
                <tr>
                    <th>تفاصيل الرسالة</th>
                    <td>@Model.ContactMessageInfo.Message</td>
                </tr>
            </table>
        </div>
        <div class="row">
            <div class="col-md-3"></div>

            <div class="col-md-6">

                <div>
                    <form asp-action="Info">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ReferenceCode" />
                        <input type="hidden" asp-for="JournalId" />
                        <input type="hidden" asp-for="PageNumber" />

                        <div class="form-group">
                            <label class="control-label">الرد</label>
                            <textarea asp-for="Replay" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="Replay" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="ارسال " class="btn btn-danger" />
                        </div>
                    </form>
                </div>
                @if (Model.ContactMessageReplay.Any())
                {
                    <ul class="list-group">
                        <li class="list-group-item active">الردود السابقة</li>
                        @foreach (var item in Model.ContactMessageReplay)
                        {
                            <li class="list-group-item">
                                (@item.CDate)
                                @item.Message
                            </li>

                        }
                    </ul>
                }
            </div>
            <div class="col-md-3"></div>

        </div>
    }


</div>



<a asp-action="Index" asp-route-pag="@Model.PageNumber" class="btn btn-primary">رجوع</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
