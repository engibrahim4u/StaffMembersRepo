@model List<EventsVM>
@using System.Globalization

@{
    string active = "active";
    string headeText;
    bool displayImage;
    int nr = 0;
    int totalNews = Model.Count - 1;

}

<div class="text-center">
    <br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @for (int x = 1; x <= totalNews; x++)
            {
                <li data-target="#myCarousel" data-slide-to="@x"></li>
            }
            @*<li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>*@
        </ol>
        <div class="carousel-inner" role="listbox">
            @foreach (var item in Model)
            {
                headeText = CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? item.Header : item.HeaderEn;
                displayImage = CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? item.DisplayInHome : item.DisplayInHomeEn;
                if (string.IsNullOrEmpty(item.Image) || !displayImage) continue;
                nr++;
                if (nr > 1) active = "";

                <div class="item @active">
                    @if (item.HasDetails)
                    {
                        if (!string.IsNullOrEmpty(item.ExternalUrl))
                        {
                            <a href="@item.ExternalUrl" target="_blank">
                                <img src="~/EventImages/@item.Image" class="img-responsive" />

                            </a>
                        }
                        else
                        {

                            <a asp-action="EventDetails" asp-controller="Home" asp-route-id="@item.Id">
                                <img src="~/EventImages/@item.Image" class="img-responsive" />
                            </a>
                        }

                    }
                    else
                    {
                        <img src="~/EventImages/@item.Image" class="img-responsive" />
                    }
                    @*<div class="carousel-caption" role="option">
                    @if (!string.IsNullOrEmpty(headeText))
                    {
                        <h3 class="font-kawla"> @headeText</h3>

                        @if (item.HasDetails)
                        {
                            <a class="btn btn-danger"  asp-action="EventDetails" asp-controller="Home" asp-route-id="@item.Id">
                                @localizer["More Details"]
                            </a>
                        }
                    }

                </div>*@
                </div>
            }


            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-primary">
                    @*@localizer["Journal of King Abdulaziz Complex for Endowment Libraries"]*@
                </h1>
            </div>
            <div class="col-md-6">


            </div>

        </div>

    </div>
</div>