@model List<Event>
@{
    ViewData["Title"] = "الأحداث";
    int nr = 0;
 
}


<div class="row">
    <div class="col-md-9 col-sm-10 col-xs-12">
        <h2> الأحداث</h2>
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12">
        <a asp-action="Add" class="btn btn-success right"><span class="glyphicon glyphicon-plus"></span>  اضافة</a>

    </div>
</div>
<div class="container" style="margin-top:10px;">

</div>
@if (Model.Any())
{
   
    <table class="table table-responsive">
        <tr class="bg-kawla-1">
            <th> #</th>
            <th>العنوان</th>
            <th>عرض بالموقع العربي</th>
            <th>عرض بالموقع الانجليزي</th>
            <th>ترتيب العرض</th>

            <th></th>
            <th></th>


        </tr>
        <tbody>
            @foreach (var row in Model)
            {

                nr++;
            <tr>
                <td class="text-center font-16B">@nr</td>

                <td class="font-16B">

                    @row.Header
                </td>
                <td class="text-center font-16B">
                    @if (row.DisplayInHome)
                    {
                        <span class="text-success">نعم</span>
                    }
                    else
                    {
                        <span class="text-danger">لا</span>
                    }
                </td>
                <td class="text-center font-16B">
                    @if (row.DisplayInHomeEn)
                    {
                        <span class="text-success">نعم</span>
                    }
                    else
                    {
                        <span class="text-danger">لا</span>
                    }
                </td>
                <td class="text-center font-16B">@row.Order</td>
              
                <td>
                    <img id="photo_@nr" src="~/EventImages/@row.Image" alt="" width="50" class="img-responsive" />
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Events" asp-route-id="@row.Id">


                        <a asp-action="Edit" asp-controller="Events" asp-route-id="@row.Id" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span></a>

                        <span style="display:none" id="confirmDeleteSpan_@nr" onclick="ConfirmDelete('@nr',false)">
                            <span>تأكيد الحذف؟</span>
                            <button type="submit" class="btn btn-danger">نعم</button>
                            <a href="#" class="btn btn-primary">لا</a>
                        </span>
                        <span id="deleteSpan_@nr" onclick="ConfirmDelete('@nr',true)">
                            <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>

                    </form>

                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="col-md-9 col-sm-6 col-xs-3"></div>
    <div class="col-md-3 col-sm-6 col-xs-9">

    </div>
}
else
{
    <h3 class=" text-danger text-center">لا يوجد بيانات</h3>
}
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/CustomScript.js"></script>
}
