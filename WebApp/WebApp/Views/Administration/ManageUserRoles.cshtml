@model List<UserRolesVM>
@inject UserManager<ApplicationUser> UserManager;

@{
    ViewData["Title"] = "EditUsersInRole";
    var userId = ViewBag.userId;
}

<h2>تعديل صلاحيات مستخدم</h2>
<form method="post">
    <ul class="list-group">
        <li class="list-group-item active">قائمة الصلاحيات</li>

        @for (int i = 0; i < Model.Count; i++)
        {
            //if (Model[i].RoleName=="superAdmin" && !User.IsInRole("superAdmin"))
            //{
            //    continue;
            //}
            <li class="list-group-item">
                <div class="checkbox">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].RoleNameAr</label>
                </div>

            </li>
        }
    </ul>
    <input type="submit" value="تحديث" class="btn btn-danger" />
    <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">الغاء</a>

</form>



